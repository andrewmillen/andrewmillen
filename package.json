{
  "name": "andrewmillen-static",
  "version": "1.0.0",
  "description": "Simple Focus Jekyll starter theme.",
  "scripts": {
    "browsersync": "browser-sync start --server _site --files '_site/**/*'",
    "build": "npm run clean && npm run js:build && npm run css:build && npm run img:build && npm run jekyll:build",
    "clean:dist": "rm -rf dist && mkdir dist && mkdir dist/js && mkdir dist/css && mkdir dist/img",
    "clean:site": "rm -rf _site && mkdir _site",
    "clean": "npm-run-all --parallel clean:*",
    "css:autoprefix": "postcss --no-map --use autoprefixer --use postcss-flexibility --use pixrem --replace dist/css/style.css",
    "css:autoprefix:_site": "postcss --use autoprefixer --use postcss-flexibility --use pixrem --replace _site/dist/css/style.css",
    "css:build": "npm run css:compile && npm run css:autoprefix",
    "css:compile": "node-sass --output-style compressed src/scss/style.scss dist/css/style.css",
    "css:compile:_site": "node-sass --output-style compressed src/scss/style.scss _site/dist/css/style.css --source-map true",
    "dev": "npm run build && npm-run-all --parallel watch browsersync",
    "img:build": "cp src/img/* dist/img/",
    "img:build:_site": "cp src/img/* _site/dist/img/",
    "jekyll:build": "jekyll build --config _config.yml,_config-dev.yml",
    "js:build": "npm run js:head && npm run js:vendor && npm run js:main",
    "js:head": "uglifyjs src/js/head/*.js --compress --output dist/js/head.min.js",
    "js:head:_site": "uglifyjs src/js/head/*.js --output _site/dist/js/head.min.js",
    "js:main": "uglifyjs src/js/main/*.js --compress --output dist/js/main.min.js",
    "js:main:_site": "uglifyjs src/js/main/*.js --output _site/dist/js/main.min.js",
    "js:vendor": "uglifyjs src/js/vendor/*.js --compress --output dist/js/vendor.min.js",
    "js:vendor:_site": "uglifyjs src/js/vendor/*.js --output _site/dist/js/vendor.min.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'src/scss/*' 'src/scss/**/*' -c 'npm run css:compile:_site && npm run css:autoprefix:_site && npm run css:build'",
    "watch:files": "chokidar '*.{html,md,markdown,yml}' '_includes/**/*' '_layouts/**/*' '_posts/**/*' -c 'npm run jekyll:build'",
    "watch:img": "chokidar 'src/img/*' -c 'npm run img:build:_site && npm run img:build'",
    "watch:js": "npm-run-all --parallel watch:js:*",
    "watch:js:head": "chokidar 'src/js/head/*.js' -c 'npm run js:head:_site && npm run js:head'",
    "watch:js:main": "chokidar 'src/js/main/*.js' -c 'npm run js:main:_site && npm run js:main'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simplefocus/SLUG-static.git"
  },
  "author": "Simple Focus (http://simplefocus.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simplefocus/SLUG-static/issues"
  },
  "homepage": "https://github.com/simplefocus/SLUG-static#readme",
  "devDependencies": {
    "autoprefixer": "latest",
    "browser-sync": "latest",
    "chokidar-cli": "latest",
    "node-sass": "latest",
    "npm-run-all": "latest",
    "pixrem": "latest",
    "postcss-cli": "latest",
    "postcss-flexibility": "latest",
    "uglify-js": "latest"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie > 8"
  ]
}
